{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"outDir": "./dist",
		"rootDir": "./",
		"declaration": true,
		"noEmit": false,
		"allowImportingTsExtensions": false,
		"verbatimModuleSyntax": false,
		"skipLibCheck": true
	},
	"include": [
		"index.ts",
		"src/**/*"
	],
	"exclude": [
		"examples/**/*",
		"dist/**/*",
		"node_modules/**/*",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}